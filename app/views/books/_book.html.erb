<div class="col-sm-6 col-md-3">
    <div class="thumbnail">
    
    <%= link_to book_path(book) do %>
      <%= image_tag book.image.url(:original), class: "img-responsive" %>
    <% end %>

      <div class="caption">
        <p><%= link_to book.name, book_path(book) %></p>
        <p><strong>$<%= book.price.to_f / 100 %></strong></p>
        <p>
        <%= link_to 'Show', book, class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_book_path(book), class: "btn btn-default" %>
        <%= link_to 'Destroy', book, class: "btn btn-warning",method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div>
    </div>
</div>